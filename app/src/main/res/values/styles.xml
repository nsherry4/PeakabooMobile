<resources>

    <!-- Base application theme. -->


    <style name="PeakabooTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--substyles-->
        <item name="android:actionBarStyle">@style/PeakabooTheme.AppBarOverlay</item>
        <!--colours-->
        <item name="android:colorPrimary">@color/peakaboo_primary_light</item>
        <item name="android:colorPrimaryDark">@color/peakaboo_primary_dark</item>
        <item name="android:colorAccent">@color/peakaboo_accent</item>



    </style>


    <style name="PeakabooTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/PeakabooTheme.AppBarOverlay.TitleText</item>
        <item name="android:textColorPrimary">@color/peakaboo_toolbar_foreground</item>
        <item name="android:textColorPrimaryInverse">@color/peakaboo_toolbar_foreground</item>
    </style>

    <style name="PeakabooTheme.AppBarOverlay.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/peakaboo_toolbar_foreground</item>
    </style>


    <style name="PeakabooTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

</resources>
