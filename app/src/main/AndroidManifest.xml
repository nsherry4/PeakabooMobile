<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.sciencestudio.peakaboo.androidui">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_peakaboo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_peakaboo"
        android:supportsRtl="true"
        android:theme="@style/PeakabooTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".net.sciencestudio.peakaboo.androidui.plot.PlotActivity"
            android:theme="@style/PeakabooTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>

</manifest>